{% extends '@BreadContent/layout.html.twig' %}

{% block content %}
    <div ng-controller="DeclarationCtrl" ng-cloak>
        <div class="load" ng-show="load"></div>
        <div class="load-space-block" ng-hide="!load"></div>
        <section>
            <div class="container">
                <div class="col-md-12" ng-show="!load">
                    <div class="row">
                        <h1>{{ page.title }}</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="declarations-list clearfix" ng-show="declarations.length">
                        <declaration ng-repeat="declaration in declarations" source="declaration"></declaration>
                    </div>
                    <div ng-if="!load && !declarations.length && !dataLoadError">
                        <div class="col-md-12">
                            <p>Спиок деклараций пуст</p>
                        </div>
                    </div>
                    <div ng-if="!load && dataLoadError">
                        <div class="col-md-12">
                            <p class="load-error load-error_14px">Во время загрузки данных возникли ошибки</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}