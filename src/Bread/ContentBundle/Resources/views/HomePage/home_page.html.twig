{% extends '@BreadContent/layout.html.twig' %}

{% block content %}
    <section ng-controller="SlideCtrl" ng-cloak>
        <div class="container">
            <div class="col-md-12">
                <div class="row">
                    <div class="slide-container">
                        <div class="owl-carousel owl-theme">
                            <div class="item" ng-repeat="slide in slides">
                                <img ng-src="[[ slide.getImage().getCropPath() ]]" alt="[[ slide.getTitle() ]]">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section ng-controller="PopulationProductCtrl" ng-cloak>
        <div class="container">
            <div class="col-md-12">
                <div class="row">
                    <h1>Популярная продукция</h1>
                </div>
            </div>
            <div class="row">
                <product ng-repeat="product in products" source="product"></product>
            </div>
            <div class="row">
                <div class="col-md-12" ng-if="populationProductsLoadError">
                    <p class="load-error load-error_14px">Во время загрузки данных возникли ошибки</p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}