{% extends '@BreadContent/layout.html.twig' %}

{% block content %}
    <section ng-controller="NewsCtrl" ng-cloak>
        <div class="load" ng-show="load"></div>
        <div class="load-space-block" ng-hide="!load"></div>
        <div class="container">
            <div class="col-md-12" ng-show="!load">
                <div class="row">
                    <h1>{{ page.title }}</h1>
                </div>
            </div>
            <div class="row">
                <div class="news-list clearfix" ng-show="news.length">
                    <new ng-repeat="new in news" source="new"></new>
                </div>
                <div ng-if="!news.length && !dataLoadError">
                    <div class="col-md-12">
                        <p>Спиок новостей пуст</p>
                    </div>
                </div>
                <div ng-if="dataLoadError">
                    <div class="col-md-12">
                        <p class="load-error load-error_14px">Во время загрузки данных возникли ошибки</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}