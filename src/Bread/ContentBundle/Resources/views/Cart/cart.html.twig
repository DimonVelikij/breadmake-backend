{% extends '@BreadContent/layout.html.twig' %}

{% block title %}Корзина{% endblock %}

{% block content %}
    <div ng-controller="CartCtrl" ng-cloak>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>Корзина</h1>
                    </div>
                </div>

                {#<div class="row">
                    <div class="col-md-12">
                        <p class="text text_orange">Корзина пуста</p>
                        <a href="{{ path('product') }}" class="text brown-dark">выбрать товары</a>
                    </div>
                </div>#}

                <div class="cart-table">
                    <div class="cart-table-caption">
                        <div class="row">
                            <div class="cart-table-caption-row clearfix">
                                <div class="col-md-4">
                                    <p class="text text_orange cart-table-caption-row__text">Товар</p>
                                </div>
                                <div class="col-md-2">
                                    <p class="text text_orange cart-table-caption-row__text cart-table-caption-row__text_center">Цена, <i class="fa fa-rouble brown-dark"></i></p>
                                </div>
                                <div class="col-md-3">
                                    <p class="text text_orange cart-table-caption-row__text cart-table-caption-row__text_center">Количество, <span class="brown-dark">(шт\кг)</span></p>
                                </div>
                                <div class="col-md-2">
                                    <p class="text text_orange cart-table-caption-row__text cart-table-caption-row__text_center">Стоимость, <i class="fa fa-rouble brown-dark"></i></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="cart-table-rows">
                        <div class="cart-table-row clearfix">
                            <div class="row">
                                <div class="col-md-12 hidden-lg hidden-md hidden-sm">
                                    <p class="table-cell__del-button-adaptive">
                                        <a href="#">
                                            <i class="fa fa-times-circle brown-dark table-cell__del-button"></i>
                                        </a>
                                    </p>
                                </div>
                                <div class="col-md-4 col-sm-5 col-xs-12">
                                    <div class="table-cell">
                                        <img src="img/product_1.png" alt="" class="cart-img">
                                        <p class="text table-cell__content table-cell__title">Хлеб Бородинский</p>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-2 col-xs-4 table-cell">
                                    <div class="table-cell__content table-cell__content_center">
                                        <p class="table-cell__adaptive">ЦЕНА</p>
                                        <p class="text table-cell__price">23 <span class="table-cell__adaptive"><i class="fa fa-rouble orange"></i></span></p>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-2 col-xs-4 table-cell">
                                    <div class=" table-cell__content table-cell__content_center">
                                        <button class="button hint-cart__button table-cell__plus-button">+</button>
                                        <input type="text" class="field-text hint-cart__text" value="2">
                                        <button class="button hint-cart__button table-cell__minus-button">-</button>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-2 col-xs-4 table-cell">
                                    <div class="table-cell__content table-cell__content_center">
                                        <p class="table-cell__adaptive">СТОИМОСТЬ</p>
                                        <p class="text table-cell__price">46 <span class="table-cell__adaptive"><i class="fa fa-rouble orange"></i></span></p>
                                    </div>
                                </div>
                                <div class="col-md-1 col-sm-1 col-xs-0 table-cell hidden-xs">
                                    <a href="#" class="table-cell__content table-cell__content_center">
                                        <i class="fa fa-times-circle brown-dark table-cell__del-button"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="cart-table-row clearfix">
                            <div class="row">
                                <div class="col-md-12 hidden-lg hidden-md hidden-sm">
                                    <p class="table-cell__del-button-adaptive">
                                        <a href="#">
                                            <i class="fa fa-times-circle brown-dark table-cell__del-button"></i>
                                        </a>
                                    </p>
                                </div>
                                <div class="col-md-4 col-sm-5 col-xs-12">
                                    <div class="table-cell">
                                        <img src="img/product_1.png" alt="" class="cart-img">
                                        <p class="text table-cell__content table-cell__title">Хлеб Бородинский</p>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-2 col-xs-4 table-cell">
                                    <div class="table-cell__content table-cell__content_center">
                                        <p class="table-cell__adaptive">ЦЕНА</p>
                                        <p class="text table-cell__price">23 <span class="table-cell__adaptive"><i class="fa fa-rouble orange"></i></span></p>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-2 col-xs-4 table-cell">
                                    <div class=" table-cell__content table-cell__content_center">
                                        <button class="button hint-cart__button table-cell__plus-button">+</button>
                                        <input type="text" class="field-text hint-cart__text" value="2">
                                        <button class="button hint-cart__button table-cell__minus-button">-</button>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-2 col-xs-4 table-cell">
                                    <div class="table-cell__content table-cell__content_center">
                                        <p class="table-cell__adaptive">СТОИМОСТЬ</p>
                                        <p class="text table-cell__price">46 <span class="table-cell__adaptive"><i class="fa fa-rouble orange"></i></span></p>
                                    </div>
                                </div>
                                <div class="col-md-1 col-sm-1 col-xs-0 table-cell hidden-xs">
                                    <a href="#" class="table-cell__content table-cell__content_center">
                                        <i class="fa fa-times-circle brown-dark table-cell__del-button"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12 text cart-table-total">Итого <span class="text_orange">4</span> товара на сумму <span class="text_orange">92 <i class="fa fa-rouble"></i></span></div>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="container">
                <div class="col-md-8 col-sm-10 col-xs-12 col-md-offset-2 col-sm-offset-1 col-xs-offset-0">
                    <div class="row">
                        <form action="#" method="post" class="form-cart">
                            <label for="cart-name" class="required">ФИО/Название компании</label>
                            <input id="cart-name" name="cart-name" type="text" class="field-text field-bottom-10">
                            <label for="cart-phone" class="required">Телефон</label>
                            <input id="cart-phone" name="cart-phone" type="text" class="field-text field-bottom-10">
                            <label for="cart-email">Email</label>
                            <input id="cart-email" name="cart-email" type="text" class="field-text field-bottom-10">
                            <label for="cart-date">Предпочитаемая дата получения заказа</label>
                            <input id="cart-date" name="cart-date" type="text" class="field-text field-bottom-20">
                            <!--тип доставки-->
                            <button type="submit" class="button">Оформить заказ</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}